{
  "name": "skills-sh",
  "displayName": "Skills.sh — Agent Skills Manager",
  "description": "Browse, install, and manage Agent Skills from skills.sh for Claude Code, Cursor, Copilot, and more",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "skills-sh",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "agent skills",
    "claude",
    "cursor",
    "copilot",
    "skills.sh",
    "ai",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/skills-sh/vscode-extension"
  },
  "icon": "media/icon.png",
  "activationEvents": [
    "onView:skills-sh.installedSkills"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skills-sh",
          "title": "Skills.sh",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "skills-sh": [
        {
          "id": "skills-sh.installedSkills",
          "name": "Installed Skills"
        },
        {
          "id": "skills-sh.marketplace",
          "name": "Marketplace",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "skills-sh.refreshInstalled",
        "title": "Refresh Installed Skills",
        "category": "Skills.sh",
        "icon": "$(refresh)"
      },
      {
        "command": "skills-sh.openSkillFile",
        "title": "Open SKILL.md",
        "category": "Skills.sh",
        "icon": "$(go-to-file)"
      },
      {
        "command": "skills-sh.installSkill",
        "title": "Browse & Install Skills",
        "category": "Skills.sh",
        "icon": "$(extensions)"
      },
      {
        "command": "skills-sh.uninstallSkill",
        "title": "Uninstall Skill",
        "category": "Skills.sh",
        "icon": "$(trash)"
      },
      {
        "command": "skills-sh.checkUpdates",
        "title": "Check for Updates",
        "category": "Skills.sh",
        "icon": "$(sync)"
      },
      {
        "command": "skills-sh.openMarketplace",
        "title": "Open Marketplace",
        "category": "Skills.sh",
        "icon": "$(extensions)"
      },
      {
        "command": "skills-sh.copySkillPath",
        "title": "Copy Path",
        "category": "Skills.sh"
      },
      {
        "command": "skills-sh.openMarketplaceTab",
        "title": "Open in Editor",
        "category": "Skills.sh",
        "icon": "$(link-external)"
      },
      {
        "command": "skills-sh.openSettings",
        "title": "Open Settings",
        "category": "Skills.sh",
        "icon": "$(gear)"
      },
      {
        "command": "skills-sh.previewSkillFile",
        "title": "Preview SKILL.md",
        "category": "Skills.sh",
        "icon": "$(eye)"
      },
      {
        "command": "skills-sh.launchClaudeWithSkill",
        "title": "Launch Claude with Skill",
        "category": "Skills.sh",
        "icon": "$(play)"
      },
      {
        "command": "skills-sh.updateSingleSkill",
        "title": "Update Skill",
        "category": "Skills.sh",
        "icon": "$(cloud-download)"
      },
      {
        "command": "skills-sh.updateAllSkills",
        "title": "Update All Skills",
        "category": "Skills.sh",
        "icon": "$(cloud-download)"
      },
      {
        "command": "skills-sh.addToManifest",
        "title": "Add to skills.json",
        "category": "Skills.sh",
        "icon": "$(bookmark)"
      },
      {
        "command": "skills-sh.removeFromManifest",
        "title": "Remove from skills.json",
        "category": "Skills.sh",
        "icon": "$(pinned)"
      },
      {
        "command": "skills-sh.editManifest",
        "title": "Edit skills.json",
        "category": "Skills.sh"
      },
      {
        "command": "skills-sh.installFromManifest",
        "title": "Install from skills.json",
        "category": "Skills.sh",
        "icon": "$(cloud-download)"
      },
      {
        "command": "skills-sh.openAudits",
        "title": "Browse Security Audits",
        "category": "Skills.sh",
        "icon": "$(shield)"
      },
      {
        "command": "skills-sh.openDocs",
        "title": "Read Documentation",
        "category": "Skills.sh",
        "icon": "$(book)"
      },
      {
        "command": "skills-sh.viewInstalledInEditor",
        "title": "View Installed Skills in Editor",
        "category": "Skills.sh"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "skills-sh.openSkillFile", "when": "false" },
        { "command": "skills-sh.uninstallSkill", "when": "false" },
        { "command": "skills-sh.copySkillPath", "when": "false" },
        { "command": "skills-sh.previewSkillFile", "when": "false" },
        { "command": "skills-sh.launchClaudeWithSkill", "when": "false" },
        { "command": "skills-sh.updateSingleSkill", "when": "false" },
        { "command": "skills-sh.updateAllSkills", "when": "false" },
        { "command": "skills-sh.addToManifest", "when": "false" },
        { "command": "skills-sh.removeFromManifest", "when": "false" },
        { "command": "skills-sh.openMarketplaceTab", "when": "false" },
        { "command": "skills-sh.openAudits", "when": "false" },
        { "command": "skills-sh.openDocs", "when": "false" },
        { "command": "skills-sh.viewInstalledInEditor", "when": "false" }
      ],
      "view/title": [
        {
          "command": "skills-sh.refreshInstalled",
          "when": "view == skills-sh.installedSkills",
          "group": "navigation"
        },
        {
          "command": "skills-sh.checkUpdates",
          "when": "view == skills-sh.installedSkills && !skills-sh.hasUpdates",
          "group": "navigation"
        },
        {
          "command": "skills-sh.updateAllSkills",
          "when": "view == skills-sh.installedSkills && skills-sh.hasUpdates",
          "group": "navigation"
        },
        {
          "command": "skills-sh.openSettings",
          "when": "view == skills-sh.installedSkills",
          "group": "2_settings"
        },
        {
          "command": "skills-sh.openMarketplaceTab",
          "when": "view == skills-sh.marketplace",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "skills-sh.previewSkillFile",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "inline"
        },
        {
          "command": "skills-sh.launchClaudeWithSkill",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "inline"
        },
        {
          "command": "skills-sh.openSkillFile",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "1_actions"
        },
        {
          "command": "skills-sh.launchClaudeWithSkill",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "1_actions"
        },
        {
          "command": "skills-sh.uninstallSkill",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "inline"
        },
        {
          "command": "skills-sh.uninstallSkill",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "2_actions"
        },
        {
          "command": "skills-sh.copySkillPath",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/",
          "group": "3_info"
        },
        {
          "command": "skills-sh.updateSingleSkill",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill_updatable/",
          "group": "inline"
        },
        {
          "command": "skills-sh.updateAllSkills",
          "when": "view == skills-sh.installedSkills && viewItem == updatesGroup",
          "group": "inline"
        },
        {
          "command": "skills-sh.addToManifest",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/ && !(viewItem =~ /manifest/)",
          "group": "inline"
        },
        {
          "command": "skills-sh.addToManifest",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill/ && !(viewItem =~ /manifest/)",
          "group": "2_actions"
        },
        {
          "command": "skills-sh.removeFromManifest",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill.*_manifest$/",
          "group": "inline"
        },
        {
          "command": "skills-sh.removeFromManifest",
          "when": "view == skills-sh.installedSkills && viewItem =~ /^skill.*_manifest$/",
          "group": "2_actions"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "skills-sh.installedSkills",
        "contents": "No agent skills detected.\n\nSkills are scanned from:\n  ~/.claude/skills/\n  ~/.cursor/skills/\n  ~/.codeium/windsurf/skills/\n  ~/.codex/skills/\n\nEach skill must be a folder containing a SKILL.md file.\n\n[Browse Marketplace](command:skills-sh.openMarketplace)\n[Open Settings](command:skills-sh.openSettings)",
        "when": "skills-sh.noSkillsFound"
      }
    ],
    "configuration": [
      {
        "title": "Skills.sh",
        "order": 1,
        "properties": {
          "skills-sh.installScope": {
            "type": "string",
            "enum": [
              "global",
              "project",
              "ask"
            ],
            "enumDescriptions": [
              "Install to ~/.agents/skills/ — available in every project (recommended)",
              "Install to the current workspace for team sharing via git",
              "Prompt you to choose each time"
            ],
            "default": "global",
            "scope": "window",
            "markdownDescription": "Controls where skills are installed by default.\n- `global` — installs to your home directory (`~/.agents/skills/`), making skills available in every project. This is the recommended default.\n- `project` — installs to the current workspace for team sharing via git.\n- `ask` — prompts you to choose each time."
          },
          "skills-sh.claudeLaunchTarget": {
            "type": "string",
            "enum": [
              "terminal",
              "extension"
            ],
            "default": "terminal",
            "enumDescriptions": [
              "Open Claude in VS Code terminal (works without Claude Code extension)",
              "Open Claude in Claude Code editor panel (requires anthropic.claude-code extension)"
            ],
            "scope": "window",
            "markdownDescription": "How to open Claude when using **Launch Claude with Skill** from the context menu.\n- `terminal` — runs the Claude CLI in a new VS Code terminal (works without any extra extensions).\n- `extension` — opens the Claude Code editor panel (requires the `anthropic.claude-code` extension)."
          },
          "skills-sh.confirmBeforeInstall": {
            "type": "boolean",
            "default": true,
            "scope": "window",
            "markdownDescription": "Show a confirmation dialog before installing or uninstalling skills. Disable this to install immediately without prompts."
          }
        }
      },
      {
        "title": "Marketplace",
        "order": 2,
        "properties": {
          "skills-sh.categories": {
            "type": "array",
            "default": [
              "react",
              "next",
              "supabase",
              "testing",
              "ai",
              "database",
              "auth",
              "css"
            ],
            "items": {
              "type": "string"
            },
            "scope": "window",
            "markdownDescription": "Filter chips displayed above the marketplace skill list. Click a chip to quickly search for skills in that category. Add or remove entries to customize the filters to your interests."
          }
        }
      },
      {
        "title": "Behavior",
        "order": 3,
        "properties": {
          "skills-sh.autoRefreshOnFocus": {
            "type": "boolean",
            "default": true,
            "scope": "window",
            "markdownDescription": "Automatically re-scan your skills directories when the VS Code window regains focus. Keeps the installed skills list up to date when you install or remove skills outside of VS Code (e.g., via `npx skills add` in a terminal)."
          },
          "skills-sh.checkUpdatesOnStartup": {
            "type": "boolean",
            "default": true,
            "scope": "window",
            "markdownDescription": "Check for available skill updates each time VS Code starts. When updates are found, a notification appears with an option to update all. Disable this to check manually via **Check for Updates** in the Command Palette."
          },
          "skills-sh.promptSkillsJson": {
            "type": "boolean",
            "default": true,
            "scope": "window",
            "markdownDescription": "Prompt to create a `skills.json` manifest when opening a project that has installed skills but no manifest file. The manifest lets you share recommended skills with your team — teammates can run **Install from skills.json** to sync."
          },
          "skills-sh.showNotifications": {
            "type": "string",
            "enum": [
              "all",
              "errors",
              "none"
            ],
            "enumDescriptions": [
              "Show all notifications (installs, updates, errors)",
              "Only show error notifications",
              "Suppress all notifications"
            ],
            "default": "all",
            "scope": "window",
            "markdownDescription": "Control which toast notifications the extension displays.\n- `all` — shows notifications for installs, updates, and errors.\n- `errors` — only shows error notifications.\n- `none` — suppresses all notifications."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.config.mjs --production",
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "package": "vsce package",
    "lint": "eslint src/",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.93.0",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^15.0.0"
  }
}
